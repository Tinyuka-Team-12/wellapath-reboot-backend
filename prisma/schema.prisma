generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  role      UserRole @default(USER)
  createdAt DateTime @default(now())
}

enum UserRole {
  USER
  ADMIN
}

model SymptomReport {
  id           String   @id @default(cuid())
  userId       String
  description  String
  severity     String
  gender       String?
  yearOfBirth  Int?
  meta         Json?
  createdAt    DateTime @default(now())

  @@index([userId])
}

model Clinic {
  id        String   @id @default(cuid())
  name      String
  lat       Float
  lng       Float
  address   String?
  premium   Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Pharmacy {
  id        String   @id @default(cuid())
  name      String
  lat       Float
  lng       Float
  address   String?
  premium   Boolean  @default(false)
  createdAt DateTime @default(now())
}
